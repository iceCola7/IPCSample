<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.cxz.ipcsample.MainActivity">

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connect" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="disconnect" />

    <Button
        android:id="@+id/btn_is_connected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="isConnected" />

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Send Message" />

    <Button
        android:id="@+id/btn_register_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegisterMessageListener" />

    <Button
        android:id="@+id/btn_unregister_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UnRegisterMessageListener" />

    <Button
        android:id="@+id/btn_messenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Send by Messenger" />

</LinearLayout>